<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:background="@drawable/bottom_gradient">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorHeadText"
        android:padding="24dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_past_order"/>

        <com.eosinfotech.restaurantcustomerui.CustomFonts.BoldTextView
            android:id="@+id/itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="select your booking time"
            android:gravity="center"
            android:textColor="@color/colorBackground"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

        <com.eosinfotech.restaurantcustomerui.CustomFonts.LightTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:text="Today's Date"
            android:gravity="center"
            android:textColor="@color/colorBackground"
            android:textSize="12dp"/>

        <com.eosinfotech.restaurantcustomerui.CustomFonts.BoldTextView
            android:id="@+id/selectDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="29.09.2018"
            android:gravity="center"
            android:textColor="@color/colorBackground"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLL"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/chooseDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryText"
            android:text="Choose Date"
            android:visibility="gone"
            android:layout_marginRight="8dp"
            android:background="@color/colorBackground"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        <Button
            android:id="@+id/chooseTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CHOOSE TIME"
            android:layout_marginLeft="8dp"
            android:background="@color/colorBackground"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorPrimaryText"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLLlakdjf"
        android:layout_below="@+id/btnLL"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.eosinfotech.restaurantcustomerui.CustomFonts.RegularTextView
            android:id="@+id/selectedDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorBackground"
            android:text="Choose Date"
            android:visibility="gone"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        <com.eosinfotech.restaurantcustomerui.CustomFonts.RegularTextView
            android:id="@+id/selectedTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Selected Time"
            android:visibility="gone"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorBackground"/>
    </LinearLayout>

    <View
        android:id="@+id/top_shadow"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/layout"
        android:background="@drawable/gradient" />

</RelativeLayout>