<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/btnLLss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.eosinfotech.restaurantcustomerui.CustomFonts.RegularTextView
            android:id="@+id/itemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryText"
            android:text="Neelam"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        <com.eosinfotech.restaurantcustomerui.CustomFonts.RegularTextView
            android:id="@+id/itemCost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Rs. 432"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorPrimaryText"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLL"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/btnLLss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.eosinfotech.restaurantcustomerui.CustomFonts.RegularTextView
        android:id="@+id/itemQuantity"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSecondaryText"
        android:layout_marginTop="6dp"
        android:text="Neelam"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        <com.eosinfotech.restaurantcustomerui.CustomFonts.RegularTextView
            android:id="@+id/itemStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Rs. 432"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorGreen"/>
    </LinearLayout>
    <com.eosinfotech.restaurantcustomerui.OwnClasses.AddToCartButton
        android:id="@+id/number_button3"
        android:layout_width="120dp"
        android:layout_height="30dp"
        app:backGroundColor="@color/colorBackground"
        app:textColor="@color/colorGunMetal"
        android:layout_marginTop="10dp"
        app:textSize="6sp"
        app:initialNumber="0"
        android:layout_below="@+id/btnLL"/>

    <com.eosinfotech.restaurantcustomerui.CustomFonts.RegularTextView
        android:id="@+id/updateitem"
        android:layout_below="@+id/btnLL"
        android:layout_toRightOf="@+id/number_button3"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:text="Update"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:gravity="center"
        android:textSize="8dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimaryText"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/top_shadow_gradient"/>

    <com.eosinfotech.restaurantcustomerui.CustomFonts.RegularTextView
        android:id="@+id/deleteitem"
        android:layout_below="@+id/btnLL"
        android:layout_toRightOf="@+id/updateitem"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:text="Delete"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:gravity="center"
        android:textSize="8dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBackground"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/bottom_gradient"/>


    <View
        android:id="@+id/lineview"
        android:layout_below="@+id/number_button3"
        android:layout_width="150dp"
        android:layout_height="0.2dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorAccent"/>

</RelativeLayout>