<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CredentialActivity.SignUpActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="@drawable/bottom_gradient"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="200dp"
        android:id="@+id/layoutInput"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gradient"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.eosinfotech.restaurantcustomerui.CustomFonts.LightTextView
            android:text="Display Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/colorSecondaryText"/>
        <com.eosinfotech.restaurantcustomerui.OwnClasses.CustomEditText
            android:id="@+id/displayName"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_user"
            android:drawableTint="@color/colorSecondaryText"
            android:hint="xxxxxxxxx"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:inputType="textPersonName"
            android:maxLength="15"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColorHint="@color/colorSecondaryText"
            android:textColor="@color/colorPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.eosinfotech.restaurantcustomerui.CustomFonts.LightTextView
            android:layout_marginTop="5dp"
            android:text="Email (optional)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondaryText"
            android:layout_marginLeft="8dp"/>
        <com.eosinfotech.restaurantcustomerui.OwnClasses.CustomEditText
            android:id="@+id/displayEmail"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/about_icon_email"
            android:drawableTint="@color/colorSecondaryText"
            android:hint="xxxxxxxxx@gmail.com"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColorHint="@color/colorSecondaryText"
            android:textColor="@color/colorPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.eosinfotech.restaurantcustomerui.CustomFonts.LightTextView
            android:layout_marginTop="5dp"
            android:text="Mobile Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondaryText"
            android:layout_marginLeft="8dp"/>
        <com.eosinfotech.restaurantcustomerui.OwnClasses.CustomEditText
            android:id="@+id/mobileNumber"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_phone"
            android:drawableTint="@color/colorSecondaryText"
            android:hint="xxxxx xxxxx"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:maxLength="10"
            android:inputType="number"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColorHint="@color/colorSecondaryText"
            android:textColor="@color/colorPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.eosinfotech.restaurantcustomerui.CustomFonts.LightTextView
            android:layout_marginTop="5dp"
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondaryText"
            android:layout_marginLeft="8dp"/>
        <com.eosinfotech.restaurantcustomerui.OwnClasses.CustomEditText
            android:id="@+id/userPassword"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_password"
            android:drawableTint="@color/colorSecondaryText"
            android:hint="*** *** *** "
            android:textCursorDrawable="@drawable/custom_cursor"
            android:maxLength="15"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:inputType="textWebPassword"
            android:textColorHint="@color/colorSecondaryText"
            android:textColor="@color/colorPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/submitUserValues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bottom_gradient"
            android:letterSpacing="0.1"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="@color/colorBackground"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageVIew"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"
        android:padding="5dp"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <com.eosinfotech.restaurantcustomerui.CustomFonts.BoldTextView
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
        android:textColor="@color/colorFirstWhite"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageVIew"
        android:text="Bouffage"
        android:letterSpacing="0.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewOOO"/>
    <com.eosinfotech.restaurantcustomerui.CustomFonts.BoldTextView
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
        android:textColor="@color/colorFirstWhite"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewOOO"
        android:text="Create a new account"
        android:letterSpacing="0.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/pleaseLogin"
        android:layout_marginBottom="4dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="6dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <com.eosinfotech.restaurantcustomerui.CustomFonts.LightTextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Already Registered ?"
            android:textColor="@color/colorSecondaryText"
            android:textSize="12dp"
            android:maxLines="1"  />
        <com.eosinfotech.restaurantcustomerui.CustomFonts.LightTextView
            android:id="@+id/companyuid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Already Registered ?"
            android:textColor="@color/colorSecondaryText"
            android:textSize="12dp"
            android:visibility="gone"
            android:maxLines="1"  />

        <com.eosinfotech.restaurantcustomerui.CustomFonts.RegularTextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/colorHeadText"
            android:maxLines="1"
            android:textSize="12dp"/>

    </LinearLayout>
</RelativeLayout>