<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="3.8dp"
            android:layout_marginRight="2dp"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <LinearLayout
                    android:id="@+id/clickLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:id="@+id/foodImage_Id"
                        android:scaleType="fitXY"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="12dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >
                        <com.eosinfotech.restaurantcustomerui.CustomFonts.BoldTextView
                            android:id="@+id/restaurant_Id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12.4sp"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:textColor="@color/colorPrimaryText"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginRight="4dp"
                            android:maxLength="28"
                            android:text="Cocobolo Poolside Bar + Grill"/>
                            <com.eosinfotech.restaurantcustomerui.CustomFonts.RegularTextView
                                android:id="@+id/currency_Id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:letterSpacing="0.1"
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="12.4sp"/>
                        </LinearLayout>

                        <!--<LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RatingBar
                                android:id="@+id/RatingBar_Id"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:rating="4"
                                android:progressTint="#f15421"
                                android:numStars="5"/>

                            <com.eosinfotech.restaurantcustomerui.CustomFonts.RegularTextView
                                android:id="@+id/Reviews_Id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8.4dp"
                                android:textSize="11.5sp"
                                android:textColor="#9b9b9b"
                                android:text="238 reviews"/>

                        </LinearLayout>-->

                        <com.eosinfotech.restaurantcustomerui.CustomFonts.LightTextView
                            android:id="@+id/address_Id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="11.5sp"
                            android:textColor="@color/colorSecondaryText"
                            android:text="Kub Pines "
                            android:layout_marginTop="6dp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginRight="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginTop="12dp"
                    android:alpha="1"
                    android:background="@color/colorBackground"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp">

                    <ImageView
                        android:id="@+id/History_Id"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_date"
                        android:layout_marginLeft="2dp"/>

                    <com.eosinfotech.restaurantcustomerui.CustomFonts.RegularTextView
                        android:id="@+id/date_Id"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:textColor="@color/colorPrimaryText"
                        android:textAllCaps="true"
                        android:textSize="10sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:letterSpacing="0.2"
                        android:text="28 Nov 2017 10 : 30 AM" />

                    <com.eosinfotech.restaurantcustomerui.CustomFonts.RegularTextView
                        android:id="@+id/order_status"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:textSize="10sp"
                        android:textAllCaps="true"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/colorHeadText"
                        android:text="reorder"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
