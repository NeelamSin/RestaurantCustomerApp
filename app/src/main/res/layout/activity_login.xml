<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="@drawable/bottom_gradient"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="260dp"
        android:id="@+id/layoutInput"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gradient"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.eosinfotech.restaurantcustomerui.CustomFonts.LightTextView
            android:layout_marginTop="5dp"
            android:text="Mobile Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondaryText"
            android:layout_marginLeft="8dp"/>
        <com.eosinfotech.restaurantcustomerui.OwnClasses.CustomEditText
            android:id="@+id/userName"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_phone"
            android:drawableTint="@color/colorSecondaryText"
            android:hint="Enter Mobile Number"
            android:inputType="number"
            android:maxLength="10"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:textColorHint="@color/colorSecondaryText"
            android:textColor="@color/colorPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.eosinfotech.restaurantcustomerui.CustomFonts.LightTextView
            android:layout_marginTop="5dp"
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondaryText"
            android:layout_marginLeft="8dp"/>
        <com.eosinfotech.restaurantcustomerui.OwnClasses.CustomEditText
            android:id="@+id/userPassword"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_password"
            android:drawableTint="@color/colorSecondaryText"
            android:hint="*** *** *** "
            android:maxLength="25"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:inputType="textWebPassword"
            android:textColorHint="@color/colorSecondaryText"
            android:textColor="@color/colorPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/buttonLogin"
            android:textColor="@color/colorBackground"
            android:background="@drawable/bottom_gradient"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:text="Sign In"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageVIew"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"
        android:padding="5dp"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <com.eosinfotech.restaurantcustomerui.CustomFonts.BoldTextView
        android:textColor="@color/colorFirstWhite"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageVIew"
        android:gravity="center"
        android:text="Bouffage"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large.Inverse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textsample"/>

    <com.eosinfotech.restaurantcustomerui.CustomFonts.BoldTextView
        android:textColor="@color/colorFirstWhite"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textsample"
        android:gravity="center"
        android:text="Sign in to your account"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/pleasesignup"
        android:layout_marginBottom="4dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="6dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <com.eosinfotech.restaurantcustomerui.CustomFonts.LightTextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Not A Member ?"
            android:textColor="@color/colorSecondaryText"
            android:textSize="12dp"
            android:maxLines="1"  />

        <com.eosinfotech.restaurantcustomerui.CustomFonts.RegularTextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SignUp"
            android:textColor="@color/colorHeadText"
            android:maxLines="1"
            android:textSize="12dp"/>

    </LinearLayout>
</RelativeLayout>