<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatusActivity.OrderFailureActivity">

    <RelativeLayout
        android:id="@+id/relativeOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationViewThree"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginBottom="10dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_enableMergePathsForKitKatAndAbove="true"
            app:lottie_fileName="orderfailure.json"/>
    </RelativeLayout>

    <com.eosinfotech.restaurantcustomerui.CustomFonts.BoldTextView
        android:id="@+id/textViewOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeOne"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:textColor="@color/colorOrderFail"
        android:textAllCaps="true"
        android:letterSpacing="0.1"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="Order failure"/>

    <com.eosinfotech.restaurantcustomerui.CustomFonts.RegularTextView
        android:id="@+id/textViewTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewOne"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:textColor="@color/colorLightGrey"
        android:letterSpacing="0.1"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:text="Sorry, your order could not be processed to restaurant due to a technical reason.\n\n Money will be auto refunded in 7 working days for paid orders."/>
</RelativeLayout>